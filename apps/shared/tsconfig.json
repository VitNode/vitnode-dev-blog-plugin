{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "eslint-config-typescript-vitnode/tsconfig.nest.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./plugins",
    "esModuleInterop": true,
    "declaration": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": ["plugins/**/*"]
}
