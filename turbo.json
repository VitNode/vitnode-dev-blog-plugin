{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "start": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dependsOn": ["^start"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "db": {
      "dependsOn": ["^db"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
